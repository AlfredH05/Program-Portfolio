import time

def sum_of_n_2(n):
  start = time.time()
  the_sum = 0
  for i in range(1, n + 1):
    the_sum = the_sum + i
    print(the_sum)
    end = time.time()
  return the_sum, end - start

for i in range(5):
  print("the sum is %d and took %10.7f seconds." % sum_of_n_2(100000))





def sum_of_n(n):
  start = time.time()
  the_sum = (n * (n + 1) / 2)
  print(the_sum)
  end = time.time
   
  return the_sum, end - start

print("the sum is %d and took %10.7f seconds." % sum_of_n(100000))
